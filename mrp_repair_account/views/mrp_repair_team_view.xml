<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="mrp_repair_team_view_form" model="ir.ui.view">
         <field name="name">mrp.repair.team.form</field>
         <field name="model">mrp.repair.team</field>
         <field name="inherit_id" ref="mrp_repair_team.mrp_repair_team_view_form"/>
         <field name="arch" type="xml">
             <xpath expr="//group[@name='main_1']" position="after">
                 <group name="allocation" string="Allocations">
                     <field name="labor_allocation_account_id"/>
                     <field name="overhead_allocation_account_id"/>
                     <field name="labor_standard_cost"/>
                     <field name="overhead_standard_cost"/>
                 </group>
             </xpath>
         </field>
     </record>

</odoo>
