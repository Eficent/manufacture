<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_repair_team_view_tree" model="ir.ui.view">
        <field name="name">mrp.repair.team.tree</field>
        <field name="model">mrp.repair.team</field>
        <field name="arch" type="xml">
            <tree string="Repair Teams">
                <field name="name"/>
                <field name="default_raw_material_location_id"/>
            </tree>
        </field>
    </record>

     <record id="mrp_repair_team_view_form" model="ir.ui.view">
        <field name="name">mrp.repair.team.form</field>
        <field name="model">mrp.repair.team</field>
        <field name="arch" type="xml">
            <form string="Repair Team">
                 <group name="main">
                     <group name="main_1">
                         <field name="name"/>
                         <field name="default_raw_material_location_id"/>
                     </group>
                 </group>
                <notebook>
                    <page name="users" string="Users">
                        <field name="user_ids"/>
                    </page>
                </notebook>
            </form>
        </field>
     </record>

    <record id="mrp_repair_team_view_search" model="ir.ui.view">
        <field name="name">mrp.repair.team.search</field>
        <field name="model">mrp.repair.team</field>
        <field name="arch" type="xml">
            <search string="Repair Teams">
                <field name="name"/>
                <field name="default_raw_material_location_id"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mrp_repair_team_action">
        <field name="name">Repair Team</field>
        <field name="res_model">mrp.repair.team</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mrp_repair_team_view_tree"/>
    </record>

    <menuitem name="Repair Teams"
              id="menu_mrp_repair_team"
              action="mrp_repair_team_action"
              parent="mrp.menu_mrp_configuration"
              sequence="50"/>

</odoo>
