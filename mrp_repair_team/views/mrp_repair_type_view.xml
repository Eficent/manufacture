<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_repair_type_view_tree" model="ir.ui.view">
        <field name="name">mrp.repair.type.tree</field>
        <field name="model">mrp.repair.type</field>
        <field name="arch" type="xml">
            <tree string="Repair types">
                <field name="name"/>
                <field name="default_raw_material_prod_location_id"/>
                <field name="invoice_method"/>
            </tree>
        </field>
    </record>

     <record id="mrp_repair_type_view_form" model="ir.ui.view">
        <field name="name">mrp.repair.type.form</field>
        <field name="model">mrp.repair.type</field>
        <field name="arch" type="xml">
            <form string="Repair type">
                <sheet>
                    <group name="main">
                        <group name="main_1">
                            <field name="name"/>
                            <field name="default_raw_material_prod_location_id"/>
                            <field name="invoice_method"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

    <record id="mrp_repair_type_view_search" model="ir.ui.view">
        <field name="name">mrp.repair.type.search</field>
        <field name="model">mrp.repair.type</field>
        <field name="arch" type="xml">
            <search string="Repair types">
                <field name="name"/>
                <field name="default_raw_material_prod_location_id"/>
                <field name="invoice_method"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="mrp_repair_type_action">
        <field name="name">Repair type</field>
        <field name="res_model">mrp.repair.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mrp_repair_type_view_tree"/>
    </record>

    <menuitem name="Repair types"
              id="menu_mrp_repair_type"
              action="mrp_repair_type_action"
              parent="mrp.menu_mrp_configuration"
              sequence="50"/>

</odoo>
