<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="repair_type_view_tree" model="ir.ui.view">
        <field name="name">repair.type.tree</field>
        <field name="model">repair.type</field>
        <field name="arch" type="xml">
            <tree string="Repair Types">
                <field name="name"/>
                <field name="default_raw_material_prod_location_id"/>
                <field name="invoice_method"/>
            </tree>
        </field>
    </record>

     <record id="repair_type_view_form" model="ir.ui.view">
        <field name="name">repair.type.form</field>
        <field name="model">repair.type</field>
        <field name="arch" type="xml">
            <form string="Repair type">
                <sheet>
                    <group name="main" string="Repair Settings">
                        <group name="main_1">
                            <field name="name"/>
                            <field name="default_raw_material_prod_location_id"/>
                            <field name="invoice_method"/>
                            <field name="under_warranty"/>
                            <field name="to_refurbish"/>
                            <field name="force_repair_location"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

    <record id="repair_type_view_search" model="ir.ui.view">
        <field name="name">repair.type.search</field>
        <field name="model">repair.type</field>
        <field name="arch" type="xml">
            <search string="Repair Types">
                <field name="name"/>
                <field name="default_raw_material_prod_location_id"/>
                <field name="invoice_method"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="repair_type_action">
        <field name="name">Repair Type</field>
        <field name="res_model">repair.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="repair_type_view_tree"/>
    </record>

    <menuitem name="Repair Types"
              id="menu_repair_type"
              action="repair_type_action"
              parent="mrp.menu_mrp_configuration"
              sequence="50"/>

</odoo>
