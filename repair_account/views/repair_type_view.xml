<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="repair_type_view_tree" model="ir.ui.view">
        <field name="name">repair.type.tree</field>
        <field name="model">repair.type</field>
        <field name="inherit_id" ref="repair_team.repair_type_view_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_method" position="after">
                <field name="journal_id"/>
                <field name="refurbish_location_id"/>
                <field name="wip_account_id"/>
            </field>
        </field>
    </record>

     <record id="repair_type_view_form" model="ir.ui.view">
        <field name="name">repair.type.form</field>
        <field name="model">repair.type</field>
        <field name="inherit_id" ref="repair_team.repair_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="after">
                <group name="second" string="Account Settings">
                    <group name="accounting">
                        <field name="journal_id"/>
                        <field name="refurbish_location_id"/>
                        <field name="wip_account_id"/>
                    </group>
                </group>
            </xpath>
        </field>
     </record>

</odoo>
