<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="mrp_bom_version_tree_view">
            <field name="name">mrp.bom.version.tree</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_tmpl_id']" position="after">
                    <field name="valid" invisible="1"/>
                    <field name="version" />
                    <field name="bom_type" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="mrp_bom_version_form_view">
            <field name="name">mrp.bom.version.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="version" />
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="bom_type"/>
                </field>
                <notebook position="inside">
                    <page string="Versions">
                        <field name="old_versions" />
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="view_mrp_bom_filter">
            <field name="name">mrp.bom.version.search</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.view_mrp_bom_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="bom_type" />
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter string="Valid" domain="[('valid','=',True)]"
                            name="is_valid_filter"/>
                </xpath>
                <xpath expr="//group/filter[@name='routings']" position="after">
                    <filter string="Active" name="active" domain="[]"
                            context="{'group_by':'active'}"/>
                    <filter name="bom_type" string="Type" domain="[]"
                            context="{'group_by':'bom_type'}"/>
                </xpath>
            </field>
        </record>
        <record id="mrp.mrp_bom_form_action" model="ir.actions.act_window">
            <field name="context">{'search_default_is_valid_filter': 1}</field>
        </record>
    </data>
</odoo>
