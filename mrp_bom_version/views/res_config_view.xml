<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <field name="group_mrp_bom_version" widget="boolean_option"/>
                    <field name="active_draft" attrs="{'invisible': [('group_mrp_bom_version', '=', False)]}" widget="boolean_option"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
